{
  "name": "@cml/form-engine",
  "version": "0.1.0",
  "private": true,
  "description": "Schema-driven form engine for the CML car finance portal.",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js",
      "import": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "default": "./dist/*.js",
      "import": "./dist/*.js"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "clean": "node -e \"const fs=require('fs');const path=require('path');const dist=path.join(process.cwd(),'dist');const tsb=path.join(process.cwd(),'tsconfig.tsbuildinfo');fs.rmSync(dist,{recursive:true,force:true});fs.rmSync(tsb,{force:true});\"",
    "build": "npm run clean && tsc -p tsconfig.json && node ../../scripts/fix-form-engine-dist.js",
    "size": "npm run build && size-limit --config ../../.size-limit.cjs"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
